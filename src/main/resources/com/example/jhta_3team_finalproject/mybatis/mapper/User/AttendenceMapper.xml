<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.jhta_3team_finalproject.mybatis.mapper.User.AttendenceMapper">


    <!-- 출근 기록 -->
    <insert id="CheckIn" parameterType="map">
        INSERT INTO user_attendance (user_num, check_in_time)
        VALUES (#{userNum}, #{dateTime})
    </insert>

    <!-- 퇴근 기록 -->
    <update id="checkOut" parameterType="map">
        UPDATE user_attendance
        SET check_out_time= #{dateTime}
        WHERE user_num=#{userNum}
    </update>

    <!-- 오늘의 출 퇴근 기록 조회-->
    <select id="getTodayAttendance" parameterType="int"  resultType="com.example.jhta_3team_finalproject.domain.User.Attendence">
     SELECT *
     FROM user_attendance
     WHERE user_num = #{userNum}
     AND DATE(check_in_time) =CURDATE()

    </select>

    <!-- 한 사람의 한달 출퇴근 기록 조회-->
    <select id="getMonthlyAttendances">
        select *
        from user_attendance

    </select>



</mapper>